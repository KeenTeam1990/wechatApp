@import "../styles/base/fn.wxss";

.wux-tabs {
    display: flex;
    width: 100%;
    height: 44px;
    line-height: 44px;
    box-sizing: border-box;
    position: relative;
    justify-content: space-around;
    align-items: center;
    background: #fff;

    &--scroll {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }
}