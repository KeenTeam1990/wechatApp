        border-color: #2f54eb;
        color: #fff;
    }
    
    &--purple {
        color: #722ed1;
        background: #f9f0ff;
        border-color: #d3adf7;
    }
    
    &--purple-inverse {
        background: #722ed1;
        border-color: #722ed1;
        color: #fff;
    }
}