        border-color: #eaff8f;
    }
    
    &--lime-inverse {
        background: #a0d911;
        border-color: #a0d911;
        color: #fff;
    }
    
    &--green {
        color: #52c41a;
        background: #f6ffed;
        border-color: #b7eb8f;
    }
    
    &--green-inverse {
        background: #52c41a;
        border-color: #52c41a;
        color: #fff;
    }
    
    &--blue {
        color: #1890ff;
        background: #e6f7ff;
        border-color: #91d5ff;
    }
    
    &--blue-inverse {
