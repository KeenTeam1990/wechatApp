@import "../styles/base/fn.wxss";

.wux-popup {
	&__button {
		display: block;
		flex: 1;
		color: @balanced;
		position: relative;
	
		&--default {
			color: #353535;
		}
	
		&--primary {
			color: @balanced;
		}

		&--bold {
			font-weight: 500;
		}

		&--hover {
			background-color: #ECECEC;
		}
	}
	
	&__input {
		&-container {
			position: relative;
			margin-top: 10px;

			&:after {
				.setBorder(#D5D5D6);
				border-top-width: 1px;
				border-right-width: 1px;
				border-bottom-width: 1px;
				border-left-width: 1px;
				border-radius: 6px;
			}
		}

		padding: 4px 6px;
		height: 36px;
    	line-height: 1;
		width: 100%;
		text-align: left;
		box-sizing: border-box;
	}

	&__buttons {
		display: flex;
		flex: 1;

		&--horizontal {
			.wux-popup__button {
				&:after {
					.setLeftLine(#D5D5D6);
				}
			
				&:first-child:after {
					display: none;
				}
			}
		}

		&--vertical {
			display: block;
			height: auto;
			
			.wux-popup__button {
				&:after {
					.setTopLine(#D5D5D6);
				}
			}
		}
	}
}