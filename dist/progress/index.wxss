.wux-progress {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wux-progress__outer {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.wux-progress__inner {
  background-color: #f3f3f3;
}
.wux-progress__bar {
  background-color: #33cd5f;
  -webkit-transition: all .3s linear 0s;
  transition: all .3s linear 0s;
}
.wux-progress__text {
  margin-left: 10rpx;
  text-align: left;
  vertical-align: middle;
}
.wux-progress--round .wux-progress__inner,
.wux-progress--round .wux-progress__bar {
  border-radius: 200rpx;
}
.wux-progress--progress .wux-progress__bar {
  position: relative;
}
.wux-progress--progress .wux-progress__bar:before {
  content: '';
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 20rpx;
  -webkit-animation: progress 2s ease-in-out infinite;
          animation: progress 2s ease-in-out infinite;
}
@-webkit-keyframes progress {
  0% {
    opacity: .3;
    width: 0;
  }
  100% {
    opacity: 0;
    width: 100%;
  }
}
@keyframes progress {
  0% {
    opacity: .3;
    width: 0;
  }
  100% {
    opacity: 0;
    width: 100%;
  }
}
